{
  "name": "universal-react",
  "version": "1.0.0",
  "description": "A universal react app boilerplate with SSR and database support",
  "main": "build/server/index.js",
  "type": "module",
  "engines": {
    "node": ">= 18",
    "npm": ">= 9"
  },
  "scripts": {
    "migration:create": "db-migrate --config migrations/db-migrate.json create",
    "migration:apply": "db-migrate --config migrations/db-migrate.json up",
    "migration:apply:stage": "db-migrate --config migrations/db-migrate.json -e stage up",
    "migration:apply:prod": "db-migrate --config migrations/db-migrate.json -e prod up",
    "migration:undo": "db-migrate --config migrations/db-migrate.json down",
    "build:server": "vite build --ssr src/server --outDir dist/server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build": "yarn build:server && yarn build:client",
    "clean": "rimraf dist",
    "start": "NODE_ENV=production node ./dist/server",
    "dev": "node ./src/server",
    "start:watch": "yarn clean && yarn build && nodemon",
    "lint:js": "eslint src/**/*.js && eslint src/**/*.jsx",
    "lint:css": "stylelint \"./src/**/*.css\"",
    "lint": "yarn lint:js && yarn lint:css",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "pretest": "jest --clearCache",
    "test": "jest --runInBand",
    "ci:test": "jest --updateSnapshot --coverage",
    "storybook": "start-storybook -p 3001",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dhruv-m-patel/universal-react.git"
  },
  "keywords": [
    "react",
    "ssr",
    "express",
    "webpack4"
  ],
  "author": "Dhruv Patel",
  "bugs": {
    "url": "https://github.com/dhruv-m-patel/universal-react/issues"
  },
  "homepage": "https://github.com/dhruv-m-patel/universal-react#readme",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "confit": "^2.3.0",
    "cookie-parser": "^1.4.5",
    "db-migrate": "^0.11.12",
    "db-migrate-mysql": "^2.1.2",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-enrouten": "^1.3.0",
    "fast-deep-equal": "^2.0.1",
    "fetch-everywhere": "^1.0.5",
    "html-minifier": "^4.0.0",
    "meddleware": "^3.0.4",
    "morgan": "^1.10.0",
    "mysql": "^2.17.1",
    "pg": "^7.18.1",
    "prop-types": "^15.7.2",
    "react": "^18.2.0",
    "react-bootstrap": "^1.6.1",
    "react-dom": "^18.2.0",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.2.9",
    "react-router-dom": "^5.3.4",
    "redux": "^4.1.0",
    "redux-api-middleware": "^3.2.1",
    "shortstop-handlers": "^1.0.1",
    "shortstop-regex": "0.0.1",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.21",
    "@storybook/addon-links": "^5.3.21",
    "@storybook/addons": "^5.3.21",
    "@storybook/react": "^5.3.21",
    "@vitejs/plugin-react": "^4.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^29.7.0",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^24.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^1.19.4",
    "prettier": "^2.3.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "storybook-react-router": "^1.0.8",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "vite": "^5.1.4"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "yarn@3.2.3"
}
